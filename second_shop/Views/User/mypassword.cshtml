
@{
    ViewBag.Title = "mypassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="~/Content/css/individual.css">
<style>
</style>

<div class="container" style="margin-top:50px; margin-bottom:50px;background-color:#fff;">
    <div class="row">

        <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
            <div class="nav-left">
                <div class="nav-content">
                    <div class="title">
                        个人中心
                    </div>
                    <ul class="nav-list">
                        <li class="title-item "> <span class="icon "> <i class="layui-icon layui-icon-file-b"></i></span>    我的资料</li>
                        <li class="title-item"><span class="icon"> <i class="layui-icon layui-icon-diamond"></i></span>我的商品</li>
                        <li class="title-item"><span class="icon"> <i class="layui-icon layui-icon-camera-fill"></i></span>我的求购</li>
                        <li class="title-item"><span class="icon"> <i class="layui-icon layui-icon-rate-solid"></i></span>我的收藏</li>
                        <li class="title-item title-item-active"><span class="icon"> <i class="layui-icon layui-icon-rate-solid"></i></span>修改密码</li>
                        <li class="title-item"><span class="icon"> <i class="layui-icon layui-icon-form"></i></span>浏览历史</li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="col-xs-9 col-sm-9 col-md-9 col-lg-9" style="padding-top:20px">
            <form class="layui-form" action="">
                <div class="layui-form-item">
                    <label class="layui-form-label">原密码</label>
                    <div class="layui-input-block">
                        <input type="password" name="" required lay-verify="required" placeholder="请输入原密码" autocomplete="off" class="layui-input" id="oldpass">
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label">新密码</label>
                    <div class="layui-input-block">
                        <input type="password" name="" required lay-verify="required" placeholder="请输入新密码" autocomplete="off"  class="layui-input" id="pass">
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label">新密码</label>
                    <div class="layui-input-block">
                        <input type="password" name="" required lay-verify="required" placeholder="请再次输入新密码" autocomplete="off" class="layui-input" id="pass1" >
                    </div>
                </div> 
                <div class="layui-form-item">
                    <div class="layui-input-block">
                        <button class="layui-btn" lay-submit lay-filter="formDemo">立即提交</button>
                    </div>
                </div>
            </form>

            <script>
                  //Demo
                  layui.use('form', function(){
                                var form = layui.form;
                                //监听提交
                                form.on('submit(formDemo)', function(data){
                                    if ($('#pass').val() !== $('#oldpass').val()) {
                                        layer.msg('请输入两次相同的密码 ');
                                        return false;
                                    }
                                    $.post("/user/changepassword", { newpass: $('#pass').val(), oldpass: $('#oldpass').val()}, function (data) {
                                        if (data == "1")
                                            layer.msg('更改成功');
                                        else
                                            layer.msg('原密码错误');
                                    })
                                    return false;
                                });
                            });
            </script>

        </div>
    </div>
</div>


